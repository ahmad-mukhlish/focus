<resources>

    <!-- Base application theme. -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CustomEditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#646060</item>
        <item name="colorControlActivated">#646060</item>
        <item name="colorControlHighlight">#646060</item>
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:textColorHint">@color/greyish</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textCursorDrawable">@drawable/color_cursor</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">#BDCDD1</item>
        <item name="colorControlActivated">#BDCDD1</item>
        <item name="colorControlHighlight">#BDCDD1</item>
        <item name="android:textColorPrimary">#010101</item>
        <item name="android:textColorHint">#C6C6C6</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CustomButton" parent="Widget.AppCompat.ActionButton">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CustomButton2" parent="Widget.AppCompat.ActionButton">
        <item name="android:textColorPrimary">#ffffff</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">13sp</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="ToolBarStyle" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

</resources>
